<%@page import="java.util.ArrayList"%>
<%@page import="com.gcit.lms.service.AdminService"%>
<%@page import="com.gcit.lms.entity.*"%>
<%@page import="java.util.List"%>
<%
	AdminService service = new AdminService();
	Integer borrowerId = Integer.parseInt(request.getParameter("borrowerId"));
	Borrower selectedBorrower = new Borrower();
	selectedBorrower = service.selectBorrowerById(borrowerId);
%>
<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal"
		aria-label="Close">
		<span aria-hidden="true">&times;</span>
	</button>
	<h4 class="modal-title" id="myModalLabel">Edit Book</h4>
</div>
<form action="updateBorrower" method="post">
	<div class="modal-body">
		<h3>Enter details to edit borrower:</h3>
		Enter borrower name: <input type="text" name="borrowerName" style="margin-right: 40px" value="<%=selectedBorrower.getName()%>" ><br/>
		
		<input type="hidden" name="borrowerId" value="<%=borrowerId%>">
		
		Enter borrower Address: <input type="text" name="borrowerAddress" style="margin-right: 40px" value="<%=selectedBorrower.getAddress()%>" >
		
		Enter borrower phone: <input type="text" name="borrowerPhone" style="margin-right: 40px" value="<%=selectedBorrower.getPhone()%>" >
		
	</div>
	<div class="modal-footer">
		<button class="btn btn-info"type="submit" >Update Borrower</button>
		<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
	</div>
</form>
